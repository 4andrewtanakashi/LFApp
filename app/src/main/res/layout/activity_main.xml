<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.MainActivity"
    android:id="@+id/mainLayout"
    android:background="#F0F8FF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/l1"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/gramatica"
            android:id="@+id/titleGrammar" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/InputGrammar"
            android:layout_weight="1"
            android:inputType="" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/palavra_para_cyk_e_deriva_o"
            android:id="@+id/titleWord" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputWord"
            android:inputType="" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l2"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/l1"
        android:layout_marginLeft="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lambda"
            android:layout_weight="1"
            android:id="@+id/button_Lambda"
            android:textAllCaps="false"
            android:background="@color/DarkGray"
            android:onClick="insertLambda"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrow"
            android:layout_weight="1"
            android:id="@+id/button_Arrow"
            android:background="@color/DarkGray"
            android:layout_marginTop="10dp"
            android:onClick="insertArrow"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pipe"
            android:layout_weight="1"
            android:id="@+id/button_Pipe"
            android:background="@color/DarkGray"
            android:layout_marginTop="10dp"
            android:onClick="insertPipe"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:id="@+id/button_OK"
            android:background="@color/DarkGray"
            android:layout_marginTop="10dp"
            android:onClick="confirmGrammar"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/button_About"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:background="@color/DarkGray"
            android:layout_marginTop="10dp"
            android:layout_weight="6"
            android:onClick="startAboutActivity"
            android:contentDescription="@string/about_button" />

    </LinearLayout>

</RelativeLayout>

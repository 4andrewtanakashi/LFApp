<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.MainActivity"
    android:id="@+id/mainLayout"
    android:background="#F0F8FF"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/l1"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Gramática: "
            android:id="@+id/titleGrammar"
            android:layout_below="@+id/textView"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/InputGrammar"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Palavra (para CYK e derivação): "
            android:id="@+id/titleWord"
            android:layout_below="@+id/inputGrammar" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputWord"
            android:layout_below="@+id/titleWord"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l2"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/l1"
        android:layout_marginLeft="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="λ"
            android:layout_weight="1"
            android:id="@+id/button_Lambda"
            android:textAllCaps="false"
            android:background="@color/DarkGray"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="->"
            android:layout_weight="1"
            android:id="@+id/button_Arrow"
            android:background="@color/DarkGray"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_weight="1"
            android:id="@+id/button_Pipe"
            android:background="@color/DarkGray"
            android:layout_marginTop="10dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/button_OK"
            android:layout_below="@+id/inputWord"
            android:background="@color/DarkGray"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/button_About"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:layout_below="@+id/inputWord"
            android:background="@color/DarkGray"
            android:layout_marginTop="10dp"
            android:layout_weight="6" />


    </LinearLayout>

</RelativeLayout>

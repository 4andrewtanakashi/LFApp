<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <include layout="@layout/header_grammar"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.67">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/idGrammarButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/identifica_o_da_gram_tica"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/derivationMostLeftButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/deriva_o_mais_esquerda"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/RemoveRecursiveInitialSymbolButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/remo_o_da_recurs_o_no_s_mbolo_inicial"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/RemoveEmptyProductionsButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/remo_o_de_produ_es_vazias"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/RemoveChainRulesButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/remo_o_de_regras_de_cadeia"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/TermButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/remo_o_de_vari_veis_que_n_o_geram_terminais"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/ReachButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/remo_o_de_s_mbolos_n_o_alcan_veis"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/FNCButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/forma_normal_de_chomsky"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/RemoveRecursionDirectLeftButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/remo_o_de_recurs_o_direta_esquerda"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/RemoveRecursionLeftButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/remo_o_de_recurs_o_direta_e_indireta_esquerda"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/FNGButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/forma_normal_de_greibach"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

            <com.ufla.lfapp.activities.utils.AutoResizeTextView
                android:id="@+id/CykButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Gainsboro"
                android:text="@string/cyk"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>